<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_aggiungi_misurazioni"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.alessandrorappini.way.Interazione.AggiungiMisurazioni">

        <TextView
            android:text="Seleziona un edificio"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/textView"
            android:textColor="@android:color/black" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/spinnerEdificio"
            />

        <TextView
            android:text="Seleziona un ReferencePoint"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/textView2"
            android:textColor="@android:color/black" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/spinnerRP"
            />

        <TextView
            android:text="Seleziona cosa analizzare"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/textView3"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/ckWIFI"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WI-FI" />

        <CheckBox
            android:id="@+id/ckBluetooth"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth" />

        <CheckBox
            android:id="@+id/ckreteCell"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rete cellulare" />

        <TextView
            android:text="Seleziona il numero di interazione con la quale svolgere l'analisi"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/textView4"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/spinnerNum"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dip"
            android:layout_height="25dip"
            android:layout_marginTop="10dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/precisione"
            />

        <Button
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:textSize="20sp"
            android:text="Start"
            android:gravity="center"
            android:background="@android:color/holo_green_dark"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:onClick="start"
            android:id="@+id/btnStart" />

        <Button
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:textSize="20sp"
            android:text="Esci"
            android:gravity="center"
            android:background="@android:color/holo_green_dark"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:onClick="esci"/>

    </LinearLayout>
</ScrollView>