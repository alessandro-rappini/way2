<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minWidth="300dp"
        android:minHeight="400dp">
    android:weightSum="1">


        <TextView
            android:id="@+id/dialog_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Rilevazioni."/>

        <TextView
            android:id="@+id/dialog_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Algoritmo pattern matching sui nomi"/>

        <TextView
            android:id="@+id/NomiWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="..."/>

        <TextView
            android:id="@+id/NomiBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="..."/>

        <TextView
            android:id="@+id/dialog_info5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Algoritmo pattern matching sulle frequenze"/>

        <TextView
            android:id="@+id/frequenzeWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="..."/>

        <TextView
            android:id="@+id/frequenzeBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="..."/>

        <TextView
            android:id="@+id/frequenzeCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="..."/>

        <TextView
            android:id="@+id/dialog_info8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Algoritmo pattern matching su entrambi gli algoritmi implementati"/>

        <TextView
            android:id="@+id/dialog_info9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="..."/>

        <TextView
            android:id="@+id/dialog_info10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="..."/>

        <Button
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:textSize="20sp"
            android:text="Esci"
            android:gravity="center"
            android:background="@android:color/holo_green_dark"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:onClick="esci"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>